{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit --strict",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "drizzle-kit generate --config=src/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=src/database/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=src/database/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=src/database/drizzle.config.ts",
    "db:reset": "bun run src/database/reset.ts",
    "db:reset:no-seed": "bun run src/database/reset.ts --no-seed",
    "db:drop": "drizzle-kit drop --config=src/database/drizzle.config.ts",
    "db:pull": "drizzle-kit pull --config=src/database/drizzle.config.ts",
    "db:seed": "bun run src/database/seeds/seed.ts",
    "db:seed:test": "bun run src/database/seeds/test-seed.ts",
    "db:reset-users": "bun run src/database/seeds/reset-users.ts",
    "db:add-users-to-orgs": "bun run src/database/seeds/add-users-to-orgs.ts",
    "db:create-user-orgs": "bun run src/database/seeds/create-user-orgs.ts",
    "db:clear-clerk": "bun run src/database/seeds/clear-clerk.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@clerk/backend": "^2.9.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@tanstack/react-query": "^5.85.3",
    "@trpc/client": "^11.4.4",
    "@trpc/next": "^11.4.4",
    "@trpc/react-query": "^11.4.4",
    "@trpc/server": "^11.5.0",
    "@types/cors": "^2.8.19",
    "@types/pg": "^8.15.5",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "swagger-ui-themes": "^3.0.1",
    "trpc-to-openapi": "^3.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "test/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@app/(.*)$": "<rootDir>/src/modules/app/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@database/(.*)$": "<rootDir>/src/database/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    }
  }
}
