# Server Configuration
PORT=3501
NODE_ENV=development

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://localhost:5432/deusrex

# Drizzle ORM Configuration
# Set to 'true' to enable SQL query logging
DRIZZLE_DEBUG=false

# Clerk Authentication
# Get these from https://dashboard.clerk.com/
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_JWT_KEY=your_jwt_key_here
CLERK_JWT_AZP=your_jwt_azp_here

# Frontend Configuration
# URL where your frontend application is hosted
FRONTEND_URL=http://localhost:5173

# Swagger Configuration
SWAGGER_THEME=light

# Superadmin Password (Optional - for seeding)
# If not set, a secure password will be generated
SUPERADMIN_PASSWORD=your_secure_password_here
